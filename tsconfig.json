{
    "compilerOptions": {
      "baseUrl": "tsconfig",
      "lib": [
        "es2018",
        "dom"
      ],
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noEmitOnError": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "outDir": "dist/",
      "pretty": true,
      "rootDir": "src/",
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "sourceMap": false,
      "strictNullChecks": true,
      "target": "es6",
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*"
    ],

  }
  